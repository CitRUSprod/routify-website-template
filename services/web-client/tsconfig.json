{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2020",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "importsNotUsedAsValues": "error",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@routify/*": ["./.routify/*"]
        }
    },
    "include": ["./src/**/*"]
}
